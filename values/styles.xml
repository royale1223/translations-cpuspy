<resources>

    <style name="DarkTheme" parent="Base.DarkTheme"/>

    <!-- Base application theme. -->
    <style name="Base.DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/material_blue_700</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/material_blue_900</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/material_teal_200</item>
        <!--   nav item customization -->
        <item name="navItemTextColor">@color/nav_item_text_color</item>
        <item name="navItemIconTint">@color/nav_item_icon_tint</item>
        <item name="swipeRefreshBackground">@color/circle_bg_dark</item>
    </style>

    <style name="LightTheme" parent="Base.LightTheme"/>

    <!-- Base application theme. -->
    <style name="Base.LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/material_blue_700</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/material_blue_900</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/material_teal_500</item>
        <!--   nav item customization -->
        <item name="navItemTextColor">@color/nav_item_text_color_light</item>
        <item name="navItemIconTint">@color/nav_item_icon_tint_light</item>
        <item name="swipeRefreshBackground">@color/circle_bg_light</item>
    </style>

    <style name="TextAppearance.Title.Spy" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/primary_text_default_dark</item>
    </style>

    <style name="TextAppearance.Body.Spy" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/secondary_text_default_dark</item>
    </style>

    <style name="LightTheme.TextAppearance.Title.Spy" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/primary_text_default_light</item>
    </style>

    <style name="LightTheme.TextAppearance.Body.Spy" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/secondary_text_default_light</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="LightTheme.ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

</resources>
